ANTHROPIC_API_KEY=your_key_here
NBA_API_DELAY_SECONDS=2.5

# Database — SQLite for local dev, PostgreSQL for production
DATABASE_URL=sqlite:///./nba_injury_impact.db

# Session token signing key — change in production
SECRET_KEY=change-this-in-production

# Backend URL — used to build Google OAuth redirect URI
# In production, set to your deployed backend URL (e.g. https://web-production-04edf.up.railway.app)
BACKEND_URL=http://localhost:8000

# Google OAuth (optional — auth endpoints return 503 if not set)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URL — used for CORS origin and OAuth redirect destination
FRONTEND_URL=http://localhost:3000

# Chat rate limiting
CHAT_DAILY_LIMIT=10

# Daily refresh scheduler (hour in EST)
REFRESH_SCHEDULE_HOUR=6

# Admin endpoint auth key
ADMIN_KEY=your_admin_key_here
